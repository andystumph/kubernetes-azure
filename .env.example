# Azure Credentials
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_LOCATION=eastus

# Terraform Service Principal
ARM_CLIENT_ID=your-client-id-here
ARM_CLIENT_SECRET=your-client-secret-here
ARM_SUBSCRIPTION_ID=${AZURE_SUBSCRIPTION_ID}
ARM_TENANT_ID=${AZURE_TENANT_ID}

# RKE2 Configuration
RKE2_TOKEN=your-secure-random-token-here
RKE2_VERSION=v1.28.5+rke2r1

# SSH Access
SSH_PUBLIC_KEY=ssh-rsa AAAAB3NzaC1yc2E...your-public-key-here

# Ansible SSH Configuration (Optional)
# Override the default SSH private key path for Ansible connections
# Default: ~/.ssh/azure_k8s
# ANSIBLE_SSH_KEY_FILE=~/.ssh/my_custom_key

# Project Configuration
ENVIRONMENT=dev
PROJECT_NAME=k8s-azure
RESOURCE_GROUP_NAME=rg-k8s-azure-dev
VM_COUNT=3

# Admin username for VMs
ADMIN_USERNAME=azureuser
