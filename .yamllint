---
# yamllint configuration for the project

extends: default

rules:
  line-length:
    max: 120
    level: warning
  
  indentation:
    spaces: 2
    indent-sequences: true
  
  comments:
    min-spaces-from-content: 1
  
  comments-indentation: enable
  
  document-start:
    present: false
  
  empty-lines:
    max: 2
  
  hyphens:
    max-spaces-after: 1
  
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
    check-keys: false
  
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
  
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

ignore: |
  .terraform/
  .cache/
  node_modules/
  venv/
  .venv/
